<Page loaded="loaded">
    <StackLayout orientation="vertical">
        <!-- <Image src="https://www.nativescript.org/images/default-source/landingpages/logo.png" ></Image> -->
        <Image src="res://logo" stretch="none" horizontalAlignment="center" ></Image>
        <TextField text="{{ email }}" hint="Email Address" keyboardType="email" autocorrect="false" autocapitalizationType="none" />
        <TextField secure="true" text="{{ password }}" hint="Password" />

        <Button text="Sign in" tap="signIn" />
        <Button text="Sign up for Groceries" class="link" tap="register" />
    </StackLayout>
</Page>